{
  "name": "disgram",
  "version": "1.0.0",
  "description": "Bridge between discord and telegram channels",
  "main": "index.mjs",
  "scripts": {
    "start": "node index.mjs",
    "docker:start": "docker compose -f ./docker/docker-compose.yml up -d",
    "docker:stop": "docker compose -f ./docker/docker-compose.yml down",
    "docker:build": "docker compose -f ./docker/docker-compose.yml build",
    "docker:refresh": "npm run docker:stop & npm run docker:build & npm run docker:start",
    "docker:start:infrastructure": "docker compose -f ./docker/infrastructure-services.yml up -d",
    "docker:stop:infrastructure": "docker compose -f ./docker/infrastructure-services.yml down",
    "deploy-commands": "node discord/commands/deploy-commands.mjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Die-Sache/DisGram.git"
  },
  "author": "OmegaPirat",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Die-Sache/DisGram/issues"
  },
  "homepage": "https://github.com/Die-Sache/DisGram#readme",
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "@telegraf/session": "^1.0.1",
    "amqplib": "^0.10.3",
    "discord.js": "^14.2.0",
    "dotenv": "^16.0.1",
    "long-settimeout": "^1.0.1",
    "minimist": "^1.2.6",
    "pg": "^8.7.3",
    "quoted-string-space-split": "^1.1.1",
    "sequelize": "^6.21.4",
    "telegraf": "^4.8.6",
    "telegram-format": "^2.1.0",
    "telegram-keyboard": "^2.3.2",
    "umzug": "^3.2.1"
  }
}
